    "dotzero-oee": {
      "command": "npx",
      "args": ["-y", "@dotzero.ai/oee-mcp"],
      "env": {
        "OEE_API_URL": "https://dotzerotech-oee-api.dotzero.app",
        "USER_API_URL": "https://user-api.dotzero.app"
      }
    }
  }
}
